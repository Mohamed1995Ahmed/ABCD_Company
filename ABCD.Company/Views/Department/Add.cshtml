@model Department

<form method="post" asp-controller="Department" asp-action="SaveAdd" class="form-control form">
    <div class="mb-3">
        <label for="Name" class="form-label">Department Name</label>
        <input name="Name" id="Name" value="@Model?.Name" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="ManagerName" class="form-label">Manager Name</label>
        <input name="ManagerName" id="ManagerName" value="@Model?.ManagerName" type="text" class="form-control" />
    </div>

    <input type="submit" value="Submit" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Department")" class="btn btn-secondary">Back to List</a>
</form>

