@model List<string>

@{
    ViewData["Title"] = "Employees in Department";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h4 class="mb-0">Employees in Selected Department</h4>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var emp in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <i class="bi bi-person-circle text-primary me-2"></i>
                                    <span class="flex-grow-1">@emp</span>
                                    <span class="badge bg-primary rounded-pill">Employee</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            No employees found in this department.
                        </div>
                    }
                </div>
                <div class="card-footer text-center bg-light">
                    <a asp-action="DisplayNamesOfDepartments" class="btn btn-outline-secondary">← Back to Departments</a>
                </div>
            </div>
        </div>
    </div>
</div>
