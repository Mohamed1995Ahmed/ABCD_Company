@model Employee

<h2>Employee Details</h2>

<div class="employee-card">
    <img src="~/@Model.ImageURL" alt="@Model.Name" />
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Job Title:</strong> @Model.JobTitle</p>
    <p><strong>Salary:</strong> @Model.Salary</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Department:</strong> @Model.Department?.Name</p>
    <p><strong>Manager:</strong> @Model.Department?.ManagerName</p>
</div>

<div style="text-align: center;">
    <a href="@Url.Action("Index", "Employee")" class="back-link">⬅ Back to List</a>
</div>

<style>
    .employee-card {
        border: 1px solid #ccc;
        padding: 20px;
        width: 350px;
        font-family: Arial, sans-serif;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
        border-radius: 10px;
        margin: 20px auto;
        text-align: left;
        background-color: #fdfdfd;
    }

        .employee-card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 10px;
        }

    h2 {
        text-align: center;
        color: #007acc;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        padding: 8px 16px;
        background-color: #007acc;
        color: white;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }

        .back-link:hover {
            background-color: #005fa3;
        }
</style>
