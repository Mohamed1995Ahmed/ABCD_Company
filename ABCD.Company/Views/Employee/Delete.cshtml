@model ABCD.Company.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h4>Confirm Delete</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold">Are you sure you want to delete this employee?</p>

                    <!-- Employee Card Partial -->
                    <div class="mb-4">
                        <partial name="_EmpCard" model="Model" />
                    </div>

                    <form asp-action="ConfirmDelete"  method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button asp-action="ConfirmDelete" asp-controller="employee" asp-route-id="@Model.Id" type="submit" class="btn btn-danger">Confirm Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
